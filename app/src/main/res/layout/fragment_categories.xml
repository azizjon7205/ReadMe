<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.CategoriesFragment">

    <com.google.android.material.appbar.AppBarLayout
        app:elevation="0dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/side_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_categs"
                    android:layout_marginHorizontal="@dimen/side_16"
                    android:textSize="20sp"
                    android:text="Categories"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/iv_filter"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

<!--        <TextView-->
<!--            android:id="@+id/tv_shaw_all_type"-->
<!--            android:layout_marginStart="@dimen/side_16"-->
<!--            android:text="Categories"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="34sp"-->
<!--            android:includeFontPadding="false"-->
<!--            android:gravity="center_vertical"-->
<!--            android:fontFamily="@font/sf_pro_display_bold"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="46dp"/>-->
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="@dimen/side_16"
            android:id="@+id/rv_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>