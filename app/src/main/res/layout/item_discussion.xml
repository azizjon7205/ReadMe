<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/side_16"
    android:orientation="vertical"
    android:layout_marginBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/circle"
                android:src="@drawable/im_audio_book"
                android:scaleType="centerCrop"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <FrameLayout
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_circular_borderless"
                android:backgroundTint="@color/blue_light"
                android:layout_width="17dp"
                android:layout_height="17dp">

                <TextView
                    android:maxHeight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/text_type_13"
                    android:gravity="center|center_vertical"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>
            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingVertical="7dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discuss_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="@color/black"
                android:text="Где убили Пушкина? Когда..."/>

            <TextView
                android:id="@+id/tv_discuss_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/black"
                android:text="Алина Бакальчук"/>

            <TextView
                android:id="@+id/tv_messages_count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:gravity="bottom"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/black_light_1"
                android:text="3 сообщений"/>

        </LinearLayout>

        <TextView
            android:layout_marginStart="25dp"
            android:id="@+id/tv_follow"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_selector_border_corner_4"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="@dimen/text_type_10"
            android:text="@string/str_follow"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:background="@color/line"
        android:layout_marginStart="80dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>