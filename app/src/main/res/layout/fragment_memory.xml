<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.basket.information.InformationFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/side_16"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/side_16"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:gravity="center_vertical"
                    android:text="@string/str_memory"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_type_32" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_16"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/arial_bold"
                    android:text="@string/str_my_library"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_type_17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_memory_of_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="389"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_type_17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/str_mb"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_type_17" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_light_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_audio_books"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_17" />

                    <TextView
                        android:id="@+id/tv_memory_audio_books"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="(318 мб)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_17" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="17dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_information_about_memory_audio_books"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_type_13" />

                    <Button
                        android:id="@+id/b_clear_memory_audio_books"
                        android:layout_width="98dp"
                        android:layout_height="30dp"
                        android:background="@drawable/tv_rounded"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_clear"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_light_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_electronic_books"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_17" />

                    <TextView
                        android:id="@+id/tv_memory_electronic_books"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="(71 мб)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_17" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="17dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_information_about_memory_audio_books"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_type_13" />

                    <Button
                        android:id="@+id/b_clear_memory_electronic_books"
                        android:layout_width="98dp"
                        android:layout_height="30dp"
                        android:background="@drawable/tv_rounded"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_clear"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_light_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_16"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/arial_bold"
                    android:text="@string/str_caching"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_type_17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_memory_of_cashes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="159"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_type_17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/str_mb"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_type_17" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_light_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_pictures"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_17" />

                    <TextView
                        android:id="@+id/tv_memory_pictures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="(159 мб)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_17" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="17dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_information_about_memory_pictures"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_type_13" />

                    <Button
                        android:id="@+id/b_clear_memory_pictures"
                        android:layout_width="98dp"
                        android:layout_height="30dp"
                        android:background="@drawable/tv_rounded"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:text="@string/str_clear"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_type_10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_light_1" />

            <Button
                android:id="@+id/b_clear_all_memory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/side_16"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/text_type_17"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="@string/str_clear_all"
                android:background="@drawable/button_red_bg"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>